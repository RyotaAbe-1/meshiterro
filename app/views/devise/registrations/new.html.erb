<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 my-5 mx-auto text-center shadow-lg">
      <h5 class="bg-light text-dark py-4">ユーザーログイン</h5>

      <div class="p-4">
        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
          <p>メールアドレスと<br>パスワードを入力してください。</p>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-user"></i>
              </span>
            </div>
            <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "名前" %>
          </div>

          <div class="form-group input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
          </div>

          <div class="form-group input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-lock"></i>
              </span>
            </div>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "パスワード" %>
          </div>

          <div class="form-group input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-check-circle"></i>
              </span>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "パスワード確認" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary btn-lg mt-5 btn-block" %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
