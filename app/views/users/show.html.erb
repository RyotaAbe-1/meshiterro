<div class="profile-container">
  <div class="row no-gutters">
    <div class="col-md-8 mx-auto d-flex justify-content-between align-items-center py-5 border-bottom">
      
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallblack: "no_image.jpg"%>
        <h3 class="profile-name"><%= @user.name %></h3>
        <% if @user.id == current_user.id %>
          <p class="mt-auto"><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
        <% end %>
      
    </div>
    
  </div>
</div>

<%= render 'post_images/list', post_images: @post_images %>