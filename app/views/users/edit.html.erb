<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 shadow-lg mx-2 mx-sm-auto my-5 text-center">
      <h5 class="bg-light py-4">プロフィール編集</h5>

      <div class="form-body p-4 text-center">
        <%= form_with model: @user, local:true do |f| %>

          <div class="form-group input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-user"></i>
              </span>
            </div>
            <%= f.text_field :name, class: "form-control",id:"inputName", autofocus: true, placeholder: "名前" %>
          </div>

          <%= attachment_image_tag @user, :profile_image, size: "60x60", fallback: "no_image.jpg", class: "mx-auto d-block mb-3" %>

          <div class="form-group my-3">
            <%= f.attachment_field :profile_image, class: "form-control-file", placeholder: "プロフィール画像" %>
          </div>

          <%= f.submit "変更を保存", class: "btn btn-primary btn-block mt-5" %>
        <% end %>
      </div>

    </div>
  </div>
</div>